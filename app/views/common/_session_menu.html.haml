- if user_signed_in?
  %ul.nav.pull-right
    %li.dropdown
      = link_to current_user.email, "#", class: "dropdown-toggle", "data-toggle" => "dropdown"
      %ul.dropdown-menu
        %li= link_to "Profile Setting", "#"
        %li= link_to "Messages", "#"
        %li.divider
        %li= link_to "Logout", logout_path
- else
  %p.navbar-text.pull-right= link_to "Login", login_path