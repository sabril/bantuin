%ul.nav.pull-right
  - if user_signed_in?
    %li.image_tag
      = link_to image_tag(current_user.avatar.thumb.url),user_profile_path if current_user.avatar? 
    %li.divider-vertical
    %li.dropdown
      = link_to raw("#{current_user.email} <b class='caret'></b>"), "#", class: "dropdown-toggle", "data-toggle" => "dropdown"
      %ul.dropdown-menu
        %li= link_to "Profile Setting", user_profile_path
        %li= link_to "Messages", "#"
        %li.divider
        %li= link_to "Logout", logout_path
  - else
    %li.pull-right= link_to "Login", login_path