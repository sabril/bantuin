%ul.nav.pull-right
  - if user_signed_in?
    %li.dropdown
      = link_to current_user.email, "#", class: "dropdown-toggle", "data-toggle" => "dropdown"
      %ul.dropdown-menu
        %li= link_to "Profile Setting", user_profile_path
        %li= link_to "Messages", "#"
        %li.divider
        %li= link_to "Logout", logout_path
  - else
    %li.pull-right= link_to "Login", login_path