- if user_signed_in?
  %ul.nav.secondary-nav
    %li.dropdown{ "data-dropdown" => "dropdown"}
      = link_to current_user.email, "#", class: "dropdown-toggle"
      %ul.dropdown-menu
        %li= link_to "Profile Setting", "#"
        %li= link_to "Messages", "#"
        %li.divider
        %li= link_to "Logout", logout_path
- else
  %p.pull-right= link_to "Login", login_path