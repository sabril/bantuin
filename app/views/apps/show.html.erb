<div class="row-fluid">
<%= render "link/menu_link" %>
  <div class="span9">
    <div class="row-fluid">
    	<div class="span8">
    	<div class="row-fluid">
    		<div class="well">
    		<h3>Job Description</h3>
    		<hr />
    		<div class="exp">
    			<div class="area-salary salary_app">Gaji yang diberikan <%= number_to_currency(@app.job.salary) %></div>
	    		<div class="area-city">
	    			&nbsp;
	    		</div>
	    	</div>
    			<%= raw @app.job.description[0,150] %>
    		</div>
    	</div>
    	<div class="row-fluid">
    		<div class="well">
    		<h3>Proposal sent</h3>
    		<hr />
    		<div class="exp">
    			<div class="area-salary salary_app">Gaji yang ditawarkan <%= number_to_currency(@app.salary) %></div>
	    		<div class="area-city">
	    			&nbsp;
	    		</div>
	    	</div>
	    	<%= raw @app.cover_letter %>
    		</div>
    	</div>
    	</div>
    	<div class="span4">
    		<div class="well">
    			<h3 class="head_title">Job overview</h3>
    			<div class="row-fluid">
    				<div class="span12 overview">
    					<div class="overview_name">Job name : </div><div class="overview_info"><%= link_to @app.job.title ,@app.job %></div>
    					<div class="overview_name">Salary : </div><div class="overview_info"><%= number_to_currency(@app.job.salary) %></div>
    					<div class="overview_name">Posted : </div><div class="overview_info"><%= @app.job.created_at.strftime("%d %B %Y")%></div>
    				</div>
    			</div>
    			<hr />
    			<div class="row-fluid">
    				<div class="span12 overview">
    					<div class="overview_name">Status : </div><div class="overview_info active">active</div>
    					<div class="overview_name">Category : </div><div class="overview_info">web programming</div>
    				</div>
    			</div>
    		</div>
    	</div>
    </div>
  </div>
</div>