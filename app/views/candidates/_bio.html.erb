<div class="span5">
	<%= f.input :full_name, :required => true, :autofocus => true, :label => "Nama Lengkap" %>
	<%= f.input :address, :as => :string, :required => true, :autofocus => true, :label => "Alamat" %>
	<%= f.input :born_place, :required => true, :label => "Tempat Lahir"%>
	<%= f.input :born_date, :as => :string, :label => "Tanggal Lahir", :required => true %>
	<%= f.input :email, :required => true  %>
	<%= f.input :phone, :required => true, :label => "Nomor Telepon"  %>
	<%= image_tag(@candidate.photo.url, :size => "200x200") if @candidate.photo? %>
	<%= f.input :photo, :as => :file, :label => "Foto Berwarna Ukuran 4x6", :required => true %>
	<%= f.hidden_field :photo_cache %>
</div>
<div class="span5">
	<%= f.input :from_university, :required => true, :label => "Asal Perguruan Tinggi"  %>
	<%= f.input :from_program, :required => true, :label => "Asal Program Studi" %>
	<%= f.input :rank, :as => :select, :collection => ["A", "B", "C", "Belum Terakreditasi"], :include_blank => false, :required => false, :label => "Akreditasi" %>
  <%= f.input :toefl, :required => false, :label => "Skor TOEFL/EPrT" %>
  <%= f.input :ipk, :required => true, :label => "IPK (x.xx)" %>
  <%= f.input :to_program, :as => :select, :collection => [["Teknik Telekomunikasi", "TT"], ["Teknik Informatika","IF"], ["Sistem Komputer","SK"] ], :include_blank => false, :required => true, :label => "Pilihan Prodi" %>
  <%= f.input :sumbangan, :label => "Sumbangan Sukarela", :required => true%>
</div>