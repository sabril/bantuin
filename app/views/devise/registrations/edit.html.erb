<div class="row-fluid">
	<%= render "link/menu_link" %>
	<div class="span9">
		<div class="row-fluid">
		<div class="span8">
		  <div class="well">
    		<h2><%= raw resource.roles[0].capitalize %> Information</h2>
    		<hr/>
  			<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    			<%#= f.error_notification %>
    			<% resource.build_address unless resource.address %>
    			<div class="row-fluid">
    			  <div class="span6">
        			<%= f.input :avatar, :as => :file %>
        			<%= f.input :first_name, :required => true, :autofocus => true %>
        			<%= f.input :last_name, :required => true %>
        			<%= f.input :email, disabled: true %>
        			<%= f.input :password, :required => false %>
        			<%= f.input :password_confirmation, :required => false %>
        			<%= f.input :time_zone, :include_blank => false, :priority => /Jakarta/ %>
        			<%= f.input :current_password, :required => true %>
      			</div>
      			<div class="span6">
      			  <%= label_tag "Profile Completeness #{resource.completeness}%"%>
        			<div class="progress progress-success">
                <div class="bar"
                     style="width: <%=resource.completeness%>%;"></div>
              </div>
        			<%= f.simple_fields_for :address do |p| %>
                <%= p.input :line_1, :label => "Address Line 1" %>
                <%= p.input :line_2, :label => "Address Line 2" %>
                <%= p.input :country, :include_blank => false, :priority => ["Indonesia"] %>
                <%= p.input :city %>
                <%= p.input :state %>
                <%= p.input :zip %>
              <% end %>
            </div>
          </div>
    			<%= f.submit "Save", :class => "btn-primary btn-large" %> 
  			<% end %>
			</div>
		</div>
		<div class="span4">
			<div class="well">
			  <div class="row-fluid">
  			  <div class="span3">
  				  <%= image_tag(current_user.avatar.avatar.url) if current_user.avatar? %>
  				</div>
  				<div class="span9">
  				  <h3>Hapus akun</h3>
  				  <p>Anda dapat menghapus akun anda.</p>
  				  <p><%= link_to "Hapus akun anda", registration_path(resource_name), :confirm => "Anda akan menghapus semua informasi akun anda?", :method => :delete, :class => "btn btn-danger" %></p>
  			  </div>
			  </div>
			</div>	
		</div>
	</div>
	</div>
</div>

