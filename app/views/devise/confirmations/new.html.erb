<div class="row-fluid">
	<div class="span4">&nbsp;</div>
	<div class="span4">
		<div class="well">
			<div class="head_name">
				<h3>Resend confirmation instructions</h3>
			</div>
			<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  			<%= f.error_notification %>
    		<%= f.input :email,:input_html => { :class => "span11" }, :required => true, :autofocus => true %>
    		<%= f.submit "Resend confirmation instructions", :class => "btn-primary btn-large" %>
			<% end %>
			<%= render "links" %>
		</div>
	</div>
</div>
